<div id = "container">
	<h1 align = "center">EARTH WORK DATA</h1>

</div>
 <div class = "Data1">

	 <form action="/addata" method="Post">
		<input id = "project" name= "Prname" type = "checkbox" value ="Kampala">
		<input id = "project" name= "Prname" type = "checkbox" value ="Zambia"><br>
		
 		<label for = "station">Station:</label>
 		<input id = "station" type="text" name="station" placeholder = "station"  required pattern=".{2,3}" required title="Please the length should be two digits minimum or three digits maximum">
 		<label for = "filltype">Fill Type:</label>
 		<select id = "filltype" name="filltype" required>
 			<option value = "G3">G3</option>
 			<option Value = "G7">G7</option> 		
 			<option Value = "G15">G15</option> 		
 			<option Value = "Sub base">Sub base</option> 
 			<option Value = "Base course">Base course</option>
			<option Value = "Asphalt">Asphalt</option> 		
 		</select>
 		<label for = "layerno:">Layer No.:</label>
 		<select id = "layerno." name = "layerno">
 			<option value = "1">First</option>
 			<option value = "2">Second</option> 		
 			<option value = "3">Third</option> 		
 			<option value = "4">Fourth</option> 
 			<option value = "5">Fifth</option> 		
 		</select>
 		
 		<label for = "thickness">Thickness:</label>
 		<input id = "thickness" type="text" name = "thickness" placeholder = "thickness" required pattern=".{2,3}" required title="Please the thickness should be two digits minimum or three digits maximum">
 		<label for = "compaction">Compaction:</label>
 		<input id = "compaction" type="text" name="compaction" placeholder = "compaction" required pattern=".{2,3}" required title="Please the compaction percentage should not exceed 100%">
 		<label for = "approval">Approval:</label>
 		<select id = "approval" name = "approval">
 			<option>Aproved</option>
 			<option>Not Approved</option>
 				
 		</select>

 		<label for = "supervisor">Supervisor</label>
 		<input id = "supervisor" type="text" name="supervisor" placeholder = "supervisor" required title="Please insert Supervisor name">
 		<button type = "submit" class = "">Add in to Matbase DB</button>

 	</form>

 </div>

 <h1>Data</h1>

<% datas.foreEach(function(data){ %>
<ul>
<li> <strong><%=data.station%></strong>strong> - <%=data.filltype%> - <%=data.layerno%> - <%=data.thickness%> - <%=data.compaction%> -  <%=data.approval%> - <%=data.supervisor%> </li>	
</ul>
<% }) %>
  


