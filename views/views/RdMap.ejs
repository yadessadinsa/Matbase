 		<label for = "compaction">Compaction:</label>
		<input class="Rcompaction" id = "compaction" type="text" name="compaction" placeholder = "compaction" required pattern=".{2,3}" required title="Please the compaction percentage should not exceed 100%">
		

		
		 <label for = "road width">Road width:</label>
		 <input class="Rroad" id = "road width" type="number" name="Rwidth" placeholder = "Road width" required pattern=".{2}" required title="Please insert correct road width!!">
		 
		 		
		 <label for = "picture">Picture:</label>
 		 <input id = "picture" type="file" name="picture" >
