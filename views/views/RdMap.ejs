		 <input class="Rpit" id = "borrow pit name" type="text" name="BPname" placeholder = "borrow pit" required title="Borrow pit name goes here!!!">
		 <label for = "shrinkage">Shrinkage:</label>
		 <input class="Rshrinkage" id = "shrinkage" type="decimal" name="shrnk" placeholder = "factor"  required type = "decimal" required pattern=".{3}" required title="Please insert shrinkage factor!!!">

		 
		 <label for = "approval">Signature:</label>
